---
interface Props {
  badge?: string
  title: string
  subtitle: string
  description: string
  primaryCTA?: {
    text: string
    href: string
  }
  secondaryCTA?: {
    text: string
    href: string
  }
  features?: string[]
}

const {
  badge = 'Studio Digital · Saint-Étienne',
  title,
  subtitle,
  description,
  primaryCTA = {
    text: 'Devis gratuit – Réponse sous 24h',
    href: '/devis',
  },
  secondaryCTA = {
    text: 'Voir nos réalisations',
    href: '/portfolio',
  },
  features = ['Devis sous 24h', 'Sans frais cachés', 'Livré en 2-3 semaines'],
} = Astro.props
---

<section class="relative section-padding bg-creme overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-or/30 to-transparent"></div>

  <div class="container mx-auto px-4">
    <div class="max-w-5xl mx-auto text-center">
      <!-- Badge -->
      <div class="mb-10 animate-fadeIn">
        <span class="text-elegant-caps text-or tracking-widest">
          {badge}
        </span>
      </div>

      <!-- Title -->
      <h1
        class="font-serif text-5xl md:text-7xl lg:text-8xl font-bold text-noir mb-8 leading-[1.05] animate-fadeIn"
        style="animation-delay: 0.1s;"
      >
        {title}<br />
        <span class="text-or">{subtitle}</span>
      </h1>

      <!-- Gold separator -->
      <div class="separator-gold-center mb-10 animate-fadeIn" style="animation-delay: 0.15s;"></div>

      <!-- Description -->
      <p
        class="text-xl md:text-2xl text-charbon font-sans mb-12 max-w-3xl mx-auto leading-relaxed animate-fadeIn"
        style="animation-delay: 0.2s;"
      >
        {description}
      </p>

      <!-- CTAs -->
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center mb-16 animate-fadeIn"
        style="animation-delay: 0.4s;"
      >
        {
          primaryCTA && (
            <a href={primaryCTA.href} class="btn-gold text-lg shadow-or">
              {primaryCTA.text}
            </a>
          )
        }
        {
          secondaryCTA && (
            <a href={secondaryCTA.href} class="btn-secondary text-lg">
              {secondaryCTA.text}
            </a>
          )
        }
      </div>

      <!-- Features -->
      <div
        class="flex flex-wrap items-center justify-center gap-8 text-sm text-charbon animate-fadeIn"
        style="animation-delay: 0.5s;"
      >
        {
          features.map((feature) => (
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-or" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="font-medium">{feature}</span>
            </div>
          ))
        }
      </div>

      <!-- Social Proof -->
      <div
        class="mt-16 pt-10 border-t border-gris-doux animate-fadeIn"
        style="animation-delay: 0.6s;"
      >
        <div class="flex flex-col sm:flex-row items-center justify-center gap-10 text-sm">
          <div class="flex items-center gap-3 text-charbon">
            <div class="w-10 h-10 rounded-full bg-or/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-or" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <span class="font-medium">Commerçants de Saint-Étienne accompagnés</span>
          </div>
          <div class="flex items-center gap-2 text-charbon">
            <div class="flex gap-0.5">
              {[1,2,3,4,5].map(() => (
                <svg class="w-5 h-5 text-or" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>
            <span class="font-semibold text-noir">4,9/5</span>
            <span class="text-gris-moyen">note moyenne</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom decorative line -->
  <div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-gris-doux to-transparent"></div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }
</style>
