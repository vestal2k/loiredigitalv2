---
interface Props {
  badge?: string
  title: string
  subtitle: string
  description: string
  primaryCTA?: {
    text: string
    href: string
  }
  secondaryCTA?: {
    text: string
    href: string
  }
  features?: string[]
}

const {
  badge = 'Studio Digital · Saint-Étienne',
  title,
  subtitle,
  description,
  primaryCTA = {
    text: 'Devis gratuit – Réponse sous 24h',
    href: '/devis',
  },
  secondaryCTA = {
    text: 'Voir nos réalisations',
    href: '/portfolio',
  },
  features = ['Devis sous 24h', 'Sans frais cachés', 'Livré en 2-3 semaines'],
} = Astro.props
---

<section class="relative py-24 md:py-32 bg-white overflow-hidden">
  <div class="container mx-auto px-4">
    <div class="max-w-5xl mx-auto text-center">
      <div class="mb-8 animate-fadeIn">
        <span
          class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gray-pale text-sm font-semibold text-gray-700"
        >
          <span class="w-2 h-2 bg-blue-600 rounded-full"></span>
          {badge}
        </span>
      </div>

      <h1
        class="text-6xl md:text-8xl lg:text-9xl font-black text-black mb-8 leading-[0.95] animate-fadeIn"
        style="letter-spacing: -0.04em; animation-delay: 0.1s;"
      >
        {title}<br />
        <span class="text-blue-600">{subtitle}</span>
      </h1>

      <p
        class="text-2xl md:text-3xl text-gray-700 font-medium mb-12 max-w-3xl mx-auto animate-fadeIn"
        style="animation-delay: 0.2s;"
      >
        {description}
      </p>

      <div
        class="flex flex-col sm:flex-row gap-4 justify-center mb-12 animate-fadeIn"
        style="animation-delay: 0.4s;"
      >
        {
          primaryCTA && (
            <a href={primaryCTA.href} class="btn-blue text-lg shadow-lg shadow-blue-600/30">
              {primaryCTA.text}
            </a>
          )
        }
        {
          secondaryCTA && (
            <a href={secondaryCTA.href} class="btn-secondary text-lg">
              {secondaryCTA.text}
            </a>
          )
        }
      </div>

      <div
        class="flex flex-wrap items-center justify-center gap-8 text-sm text-gray-600 animate-fadeIn"
        style="animation-delay: 0.5s;"
      >
        {
          features.map((feature) => (
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"
                />
              </svg>
              <span>{feature}</span>
            </div>
          ))
        }
      </div>

      <!-- Social Proof -->
      <div
        class="mt-12 pt-8 border-t border-gray-100 animate-fadeIn"
        style="animation-delay: 0.6s;"
      >
        <div class="flex flex-col sm:flex-row items-center justify-center gap-8 text-sm">
          <div class="flex items-center gap-2 text-gray-700">
            <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
            </svg>
            <span class="font-medium">Commerçants de Saint-Étienne accompagnés</span>
          </div>
          <div class="flex items-center gap-1 text-gray-700">
            <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
