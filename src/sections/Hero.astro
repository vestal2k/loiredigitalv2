---
interface Props {
  badge?: string
  title: string
  highlight: string
  description: string
  primaryCTA?: {
    text: string
    href: string
  }
  secondaryCTA?: {
    text: string
    href: string
  }
  features?: string[]
}

const {
  badge = 'Loire Digital',
  title,
  highlight,
  description,
  primaryCTA = {
    text: 'Calculer mon devis',
    href: '/devis',
  },
  secondaryCTA = {
    text: 'Découvrir les services',
    href: '/#services',
  },
  features = ['Réponse sous 24h', 'Prix affichés', 'Livré en 2-3 semaines'],
} = Astro.props
---

<section class="relative min-h-[60vh] flex items-center overflow-hidden bg-gradient-to-br from-creme via-white to-creme">
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 right-10 w-72 h-72 bg-or/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 left-10 w-96 h-96 bg-or/3 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-radial from-or/5 to-transparent rounded-full"></div>
  </div>

  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-or/30 to-transparent"></div>

  <div class="container mx-auto px-4 py-12 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <div class="mb-8 animate-fadeIn">
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-or/10 rounded-full text-sm font-medium text-or">
          <span class="w-2 h-2 bg-or rounded-full animate-pulse"></span>
          {badge} · Saint-Étienne
        </span>
      </div>

      <h1
        class="hero-title font-serif font-bold text-noir mb-6 leading-[1.1] animate-fadeIn"
        style="animation-delay: 0.1s;"
      >
        {title}
        <span class="hero-highlight">{highlight}</span>
      </h1>

      <p
        class="text-lg md:text-xl text-charbon font-sans mb-10 max-w-2xl mx-auto leading-relaxed animate-fadeIn"
        style="animation-delay: 0.2s;"
      >
        {description}
      </p>

      <div
        class="flex flex-col sm:flex-row gap-4 justify-center mb-12 animate-fadeIn"
        style="animation-delay: 0.3s;"
      >
        {
          primaryCTA && (
            <a href={primaryCTA.href} class="btn-gold text-lg shadow-lg hover:shadow-or/25 hover:scale-105 transition-all duration-300">
              {primaryCTA.text}
              <svg class="w-5 h-5 ml-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          )
        }
        {
          secondaryCTA && (
            <a href={secondaryCTA.href} class="btn-secondary text-lg hover:border-or hover:text-or transition-all duration-300">
              {secondaryCTA.text}
            </a>
          )
        }
      </div>

      <div
        class="flex flex-wrap items-center justify-center gap-6 md:gap-10 text-sm text-charbon animate-fadeIn"
        style="animation-delay: 0.4s;"
      >
        {
          features.map((feature) => (
            <div class="flex items-center gap-2">
              <div class="w-6 h-6 rounded-full bg-or/10 flex items-center justify-center">
                <svg class="w-3.5 h-3.5 text-or" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="font-medium">{feature}</span>
            </div>
          ))
        }
      </div>

      <div class="mt-16 animate-fadeIn" style="animation-delay: 0.5s;">
        <p class="text-sm text-gris-moyen mb-4">À partir de</p>
        <div class="inline-flex items-baseline gap-1">
          <span class="text-5xl md:text-6xl font-serif font-bold text-noir">400</span>
          <span class="text-2xl font-serif text-or">EUR</span>
        </div>
        <p class="text-sm text-charbon mt-2">Site vitrine complet</p>
      </div>
    </div>
  </div>

  <div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-gris-doux to-transparent"></div>
</section>

<style>
  .hero-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
  }

  .hero-highlight {
    display: block;
    background: linear-gradient(135deg, #C9901F 0%, #E5B84A 50%, #C9901F 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }
</style>
