---
interface Props {
  title: string
  description?: string
  primaryButton?: {
    text: string
    href: string
  }
  secondaryButton?: {
    text: string
    href: string
  }
  centered?: boolean
  variant?: 'light' | 'dark' | 'gold'
}

const {
  title,
  description,
  primaryButton,
  secondaryButton,
  centered = true,
  variant = 'light',
} = Astro.props

const bgClass = {
  light: 'bg-creme',
  dark: 'bg-noir',
  gold: 'bg-gradient-to-br from-or/10 to-or/5',
}[variant]

const textClass = variant === 'dark' ? 'text-white' : 'text-noir'
const descClass = variant === 'dark' ? 'text-white/70' : 'text-charbon'
---

<section class={`section-padding ${bgClass} relative overflow-hidden`}>
  <!-- Decorative elements -->
  {variant === 'dark' && (
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-or rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-or rounded-full blur-3xl"></div>
    </div>
  )}

  <div class="container mx-auto px-4 relative">
    <div class={`max-w-4xl mx-auto ${centered ? 'text-center' : ''}`}>
      {variant !== 'dark' && <div class="separator-gold-center mb-8"></div>}

      <h2 class={`section-title ${textClass} mb-6 ${centered ? '' : 'text-left'}`}>
        {title}
      </h2>

      {
        description && (
          <p class={`text-xl ${descClass} mb-10 max-w-2xl ${centered ? 'mx-auto' : ''} leading-relaxed`}>
            {description}
          </p>
        )
      }

      <div class={`flex flex-col sm:flex-row gap-4 ${centered ? 'justify-center' : ''}`}>
        {
          primaryButton && (
            <a
              href={primaryButton.href}
              class={`${variant === 'dark' ? 'btn-gold' : 'btn-gold'} text-lg shadow-or`}
            >
              {primaryButton.text}
            </a>
          )
        }
        {
          secondaryButton && (
            <a
              href={secondaryButton.href}
              class={`${variant === 'dark' ? 'btn-ghost text-white hover:text-or hover:bg-white/10' : 'btn-secondary'} text-lg`}
            >
              {secondaryButton.text}
            </a>
          )
        }
      </div>

      {variant !== 'dark' && <div class="separator-gold-center mt-12"></div>}
    </div>
  </div>
</section>
