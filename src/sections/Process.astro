---
interface DetailItem {
  label: string
  content: string
}

interface ProcessStep {
  number: string
  title: string
  description: string
  timing?: string
  clientProvides?: string[]
  weDeliver?: string[]
  details?: DetailItem[]
}

interface Props {
  title?: string
  subtitle?: string
  steps: ProcessStep[]
  sectionId?: string
}

const {
  title = 'Comment ça se passe ?',
  subtitle = 'Un process simple et transparent, étape par étape.',
  steps,
  sectionId = 'process',
} = Astro.props
---

<section id={sectionId} class="section-padding section-white">
  <div class="container mx-auto px-4">
    <div class="max-w-5xl mx-auto">
      <!-- Section Header -->
      <div class="mb-16 text-center">
        <span class="text-elegant-caps text-or tracking-widest mb-4 block">Notre processus</span>
        <h2 class="section-title">{title}</h2>
        <div class="separator-gold-center mt-6 mb-6"></div>
        {subtitle && <p class="section-subtitle mx-auto">{subtitle}</p>}
      </div>

      <!-- Timeline -->
      <div class="relative">
        <!-- Vertical line on desktop -->
        <div class="hidden md:block absolute left-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-or via-or-light to-gris-doux"></div>

        <div class="space-y-10">
          {
            steps.map((step, _index) => (
              <div class="relative">
                <!-- Timeline dot -->
                <div class="hidden md:flex absolute left-8 -translate-x-1/2 w-8 h-8 rounded-full bg-or items-center justify-center z-10 shadow-or">
                  <div class="w-3 h-3 rounded-full bg-white" />
                </div>

                <!-- Content card -->
                <div class="md:ml-20">
                  <div class="card-elegant">
                    <div class="flex items-start gap-4 mb-4">
                      <div class="font-serif text-4xl font-bold text-or leading-none">{step.number}</div>
                      <div class="flex-1">
                        <h3 class="font-serif text-2xl font-bold text-noir mb-2">{step.title}</h3>
                        {step.timing && (
                          <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-or/10 rounded-elegant text-xs font-semibold text-or mb-3">
                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                              />
                            </svg>
                            {step.timing}
                          </div>
                        )}
                        <p class="text-charbon leading-relaxed">{step.description}</p>
                      </div>
                    </div>

                    {/* Client provides section */}
                    {step.clientProvides && step.clientProvides.length > 0 && (
                      <div class="mt-6 p-5 bg-creme rounded-elegant border border-gris-doux">
                        <p class="text-elegant-caps text-charbon mb-3">
                          Ce que vous fournissez :
                        </p>
                        <ul class="space-y-2">
                          {step.clientProvides.map((item) => (
                            <li class="flex items-start gap-3 text-sm text-charbon">
                              <svg
                                class="w-4 h-4 text-or flex-shrink-0 mt-0.5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                              >
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                              </svg>
                              <span>{item}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {/* We deliver section */}
                    {step.weDeliver && step.weDeliver.length > 0 && (
                      <div class="mt-4 p-5 bg-or/5 rounded-elegant border border-or/20">
                        <p class="text-elegant-caps text-or mb-3">
                          Ce que nous faisons :
                        </p>
                        <ul class="space-y-2">
                          {step.weDeliver.map((item) => (
                            <li class="flex items-start gap-3 text-sm text-charbon">
                              <svg
                                class="w-4 h-4 text-or flex-shrink-0 mt-0.5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                              >
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                              </svg>
                              <span>{item}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {/* Additional details */}
                    {step.details && step.details.length > 0 && (
                      <div class="mt-5 pt-5 border-t border-gris-doux grid grid-cols-1 md:grid-cols-2 gap-4">
                        {step.details.map((detail) => (
                          <div class="flex items-start gap-3">
                            <div class="w-1.5 h-1.5 bg-or rounded-full mt-2 flex-shrink-0" />
                            <div>
                              <p class="text-xs font-semibold text-noir">{detail.label}</p>
                              <p class="text-xs text-charbon">{detail.content}</p>
                            </div>
                          </div>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Summary callout -->
      <div class="mt-16 text-center">
        <div class="inline-flex items-center gap-4 px-8 py-5 bg-noir rounded-elegant shadow-elegant-lg">
          <svg class="w-6 h-6 text-or" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
          <p class="text-white font-medium">
            <span class="text-or font-semibold">Total : 2-3 semaines du devis à la mise en ligne</span>
            <span class="text-white/70 ml-2">— Simple, transparent, efficace.</span>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
