---
interface DetailItem {
  label: string
  content: string
}

interface ProcessStep {
  number: string
  title: string
  description: string
  timing?: string
  clientProvides?: string[]
  weDeliver?: string[]
  details?: DetailItem[]
}

interface Props {
  title?: string
  subtitle?: string
  steps: ProcessStep[]
  sectionId?: string
}

const {
  title = 'Comment ça se passe ?',
  subtitle = 'Un process simple et transparent, étape par étape.',
  steps,
  sectionId = 'process',
} = Astro.props
---

<section id={sectionId} class="py-16 md:py-24 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-5xl mx-auto">
      <div class="mb-16 text-center">
        <h2
          class="text-4xl md:text-5xl font-black text-black mb-4"
          style="letter-spacing: -0.02em;"
        >
          {title}
        </h2>
        {subtitle && <p class="text-lg text-gray-text max-w-2xl mx-auto">{subtitle}</p>}
      </div>

      <!-- Timeline -->
      <div class="relative">
        <!-- Vertical line on desktop -->
        <div
          class="hidden md:block absolute left-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-blue-600 via-blue-400 to-blue-200"
        >
        </div>

        <div class="space-y-12">
          {
            steps.map((step, index) => (
              <div class="relative">
                <!-- Timeline dot -->
                <div class="hidden md:flex absolute left-8 -translate-x-1/2 w-8 h-8 rounded-full bg-blue-600 items-center justify-center z-10">
                  <div class="w-4 h-4 rounded-full bg-white" />
                </div>

                <!-- Content card -->
                <div class="md:ml-20">
                  <div class="card-minimal bg-gray-50 p-8">
                    <div class="flex items-start gap-4 mb-4">
                      <div class="text-4xl font-black text-blue-600 leading-none">{step.number}</div>
                      <div class="flex-1">
                        <h3 class="text-2xl font-bold text-black mb-2">{step.title}</h3>
                        {step.timing && (
                          <div class="inline-flex items-center gap-2 px-3 py-1 bg-blue-50 rounded-full text-xs font-semibold text-blue-600 mb-3">
                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                              />
                            </svg>
                            {step.timing}
                          </div>
                        )}
                        <p class="text-sm text-gray-700 leading-relaxed">{step.description}</p>
                      </div>
                    </div>

                    {/* Client provides section */}
                    {step.clientProvides && step.clientProvides.length > 0 && (
                      <div class="mt-6 p-4 bg-white rounded-lg border border-gray-200">
                        <p class="text-xs font-bold text-gray-700 uppercase tracking-wide mb-3">
                          Ce que vous fournissez :
                        </p>
                        <ul class="space-y-2">
                          {step.clientProvides.map((item) => (
                            <li class="flex items-start gap-2 text-sm text-gray-700">
                              <svg
                                class="w-4 h-4 text-blue-600 flex-shrink-0 mt-0.5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                />
                              </svg>
                              <span>{item}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {/* We deliver section */}
                    {step.weDeliver && step.weDeliver.length > 0 && (
                      <div class="mt-4 p-4 bg-blue-50 rounded-lg border border-blue-100">
                        <p class="text-xs font-bold text-blue-700 uppercase tracking-wide mb-3">
                          Ce que nous faisons :
                        </p>
                        <ul class="space-y-2">
                          {step.weDeliver.map((item) => (
                            <li class="flex items-start gap-2 text-sm text-gray-700">
                              <svg
                                class="w-4 h-4 text-blue-600 flex-shrink-0 mt-0.5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                              >
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                              </svg>
                              <span>{item}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {/* Additional details */}
                    {step.details && step.details.length > 0 && (
                      <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-3">
                        {step.details.map((detail) => (
                          <div class="flex items-start gap-2">
                            <div class="w-1.5 h-1.5 bg-blue-600 rounded-full mt-2 flex-shrink-0" />
                            <div>
                              <p class="text-xs font-semibold text-gray-700">{detail.label}</p>
                              <p class="text-xs text-gray-600">{detail.content}</p>
                            </div>
                          </div>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Summary callout -->
      <div class="mt-12 text-center">
        <div class="inline-flex items-center gap-3 px-6 py-4 bg-gradient-to-r from-blue-50 to-green-50 rounded-xl border border-blue-100">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
          <p class="text-sm font-semibold text-gray-800">
            <strong class="text-blue-600">Total : 2-3 semaines du devis à la mise en ligne</strong> — Simple, transparent, efficace.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
