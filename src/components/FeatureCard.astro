---
interface Props {
  title: string
  description: string
  icon?: string
  highlight?: boolean
  class?: string
}

const {
  title,
  description,
  icon,
  highlight = false,
  class: className = '',
} = Astro.props
---

<div
  class={`${highlight ? 'card-elegant-highlight' : 'card-elegant'} p-8 flex flex-col ${className}`}
>
  {
    icon && (
      <div class="w-14 h-14 rounded-elegant bg-or/10 flex items-center justify-center mb-6">
        <slot name="icon">
          <svg
            class="w-7 h-7 text-or"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={icon} />
          </svg>
        </slot>
      </div>
    )
  }
  <h3 class="font-serif text-xl font-bold text-noir mb-3">{title}</h3>
  <p class="text-charbon leading-relaxed">{description}</p>
  <slot />
</div>
