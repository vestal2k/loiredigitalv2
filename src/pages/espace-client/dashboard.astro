---
import BaseLayout from '@/layouts/BaseLayout.astro'
import ClientHeader from '@/components/ClientHeader.astro'
import { requireAuth } from '@/lib/auth'
import { getClientById, getClientProjects } from '@/lib/sanity/queries'

// V√©rifier l'authentification
const authResult = requireAuth(Astro.cookies)
if (authResult instanceof Response) {
  return authResult
}

// R√©cup√©rer les donn√©es du client
const client = await getClientById(authResult.userId)
if (!client) {
  return Astro.redirect('/espace-client/connexion')
}

// R√©cup√©rer les projets
const projects = await getClientProjects(authResult.userId)

// Labels des statuts
const statusLabels: Record<string, string> = {
  'pending-payment': '‚è≥ En attente',
  design: 'üé® Conception',
  development: 'üíª D√©veloppement',
  review: 'üîç R√©vision',
  completed: '‚úÖ Termin√©',
  deployed: 'üöÄ D√©ploy√©',
}

const packLabels: Record<string, string> = {
  starter: 'Starter',
  essentiel: 'Essentiel',
  premium: 'Premium',
  ecommerce: 'E-commerce',
}

const inProgress = projects.filter((p) => !['completed', 'deployed'].includes(p.status)).length
const completed = projects.filter((p) => ['completed', 'deployed'].includes(p.status)).length
const totalInvested = projects.reduce((sum: number, p) => sum + p.totalAmount, 0)
---

<BaseLayout title="Dashboard - Espace Client | Loire Digital" description="Tableau de bord de votre espace client Loire Digital">
  <ClientHeader currentPage="dashboard" />

  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <!-- Bienvenue -->
      <div class="mb-12">
        <h1 class="text-5xl md:text-6xl font-black text-black mb-3" style="letter-spacing: -0.02em;">
          Bonjour {client.firstName} üëã
        </h1>
        <p class="text-xl text-gray-text">
          Retrouvez ici le suivi de tous vos projets avec Loire Digital.
        </p>
      </div>

      <!-- Statistiques -->
      {
        projects.length > 0 && (
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-16">
            <!-- Projets en cours -->
            <div class="card-minimal">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm text-gray-text mb-1">Projets en cours</p>
                  <p class="text-4xl font-black text-blue-600">{inProgress}</p>
                </div>
                <div class="w-16 h-16 bg-blue-50 rounded-2xl flex items-center justify-center">
                  <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                  </svg>
                </div>
              </div>
            </div>

            <!-- Projets termin√©s -->
            <div class="card-minimal">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm text-gray-text mb-1">Projets termin√©s</p>
                  <p class="text-4xl font-black text-green-600">{completed}</p>
                </div>
                <div class="w-16 h-16 bg-green-50 rounded-2xl flex items-center justify-center">
                  <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>
            </div>

            <!-- Total investi -->
            <div class="card-minimal">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm text-gray-text mb-1">Total investi</p>
                  <p class="text-4xl font-black text-black">{totalInvested} ‚Ç¨</p>
                </div>
                <div class="w-16 h-16 bg-purple-50 rounded-2xl flex items-center justify-center">
                  <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>
            </div>
          </div>
        )
      }

      <!-- Mes projets -->
      <div>
        <h2 class="text-3xl font-black text-black mb-8">Mes projets</h2>

        {
          projects.length === 0 ? (
            <div class="card-minimal text-center py-16">
              <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <p class="text-xl font-bold text-black mb-3">Aucun projet en cours</p>
              <p class="text-gray-text mb-8">Vous n'avez pas encore de projet avec nous.</p>
              <a href="/devis" class="btn-blue inline-block">
                Demander un devis
              </a>
            </div>
          ) : (
            <div class="grid gap-6">
              {projects.map((project) => (
                <a href={`/espace-client/projet/${project._id}`} class="card-minimal hover:shadow-2xl transition-all group">
                  <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
                    <!-- Info projet -->
                    <div class="flex-1">
                      <div class="flex items-start gap-4">
                        <div class="flex-1">
                          <h3 class="text-xl font-black text-black mb-2 group-hover:text-blue-600 transition-colors">
                            {project.title}
                          </h3>
                          <div class="flex flex-wrap items-center gap-3 text-sm">
                            <span class="px-3 py-1 bg-blue-50 text-blue-600 font-semibold rounded-full">
                              {packLabels[project.pack]}
                            </span>
                            <span class="text-gray-text">{statusLabels[project.status]}</span>
                          </div>
                        </div>
                      </div>

                      {/* Barre de progression */}
                      <div class="mt-6">
                        <div class="flex justify-between text-sm mb-2">
                          <span class="font-semibold text-gray-text">Progression</span>
                          <span class="font-bold text-black">{project.progress}%</span>
                        </div>
                        <div class="w-full h-2 bg-gray-100 rounded-full overflow-hidden">
                          <div
                            class="h-full bg-gradient-to-r from-blue-600 to-green-600 transition-all duration-500"
                            style={`width: ${project.progress}%`}
                          />
                        </div>
                      </div>
                    </div>

                    <!-- Montant -->
                    <div class="text-right">
                      <p class="text-sm text-gray-text mb-1">Montant du projet</p>
                      <p class="text-3xl font-black text-black">{project.totalAmount} ‚Ç¨</p>
                      <p class="text-sm text-green-600 font-semibold mt-2">
                        {project.paidAmount} ‚Ç¨ pay√©
                      </p>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          )
        }
      </div>
    </div>
  </section>
</BaseLayout>
