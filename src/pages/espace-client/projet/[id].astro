---
import BaseLayout from '@/layouts/BaseLayout.astro'
import ClientHeader from '@/components/ClientHeader.astro'
import { requireAuth } from '@/lib/auth'
import { getProjectById } from '@/lib/sanity-client'
import { imageBuilder } from '@/lib/sanity'

// V√©rifier l'authentification
const authResult = requireAuth(Astro.cookies)
if (authResult instanceof Response) {
  return authResult
}

// R√©cup√©rer le projet
const projectId = Astro.params.id
if (!projectId) {
  return Astro.redirect('/espace-client/dashboard')
}

const project = await getProjectById(projectId)
if (!project) {
  return Astro.redirect('/espace-client/dashboard')
}

// V√©rifier que le projet appartient au client
if (project.client._ref !== authResult.userId) {
  return Astro.redirect('/espace-client/dashboard')
}

// Labels
const statusLabels: Record<string, string> = {
  'pending-payment': '‚è≥ En attente de paiement',
  design: 'üé® En conception',
  development: 'üíª En d√©veloppement',
  review: 'üîç En r√©vision',
  completed: '‚úÖ Termin√©',
  deployed: 'üöÄ D√©ploy√©',
}

const packLabels: Record<string, string> = {
  starter: 'Starter One-Page',
  essentiel: 'Essentiel',
  premium: 'Premium',
  ecommerce: 'E-commerce',
}

const mockupStatusLabels: Record<string, string> = {
  pending: '‚è≥ En attente de votre validation',
  approved: '‚úÖ Valid√©e',
  revision: 'üîÑ √Ä r√©viser',
}

const invoiceStatusLabels: Record<string, string> = {
  pending: '‚è≥ En attente',
  paid: '‚úÖ Pay√©e',
  overdue: '‚ùå √âchue',
}

// Formater les dates
function formatDate(dateString?: string): string {
  if (!dateString) return 'Non d√©finie'
  const date = new Date(dateString)
  return date.toLocaleDateString('fr-FR', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
  })
}
---

<BaseLayout
  title={`${project.title} - Espace Client | Loire Digital`}
  description={`Suivi du projet ${project.title}`}
>
  <ClientHeader />

  <!-- Contenu principal -->
  <section class="py-12 md:py-16 bg-gradient-to-br from-gray-50 via-white to-blue-50/30">
    <div class="container mx-auto px-4 max-w-7xl">
      <!-- Breadcrumb -->
      <div class="mb-8">
        <a
          href="/espace-client/dashboard"
          class="inline-flex items-center text-gray-600 hover:text-blue-600 transition-colors font-medium"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Retour au tableau de bord
        </a>
      </div>

      <!-- En-t√™te du projet -->
      <div class="card-minimal mb-8">
        <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4 mb-6">
          <div class="flex-1">
            <h1 class="heading-lg mb-3">{project.title}</h1>
            <p class="text-gray-600 leading-relaxed">{project.description || 'Projet en cours de r√©alisation'}</p>
          </div>
          <span class="inline-flex items-center px-4 py-2 rounded-xl font-semibold text-sm bg-gradient-to-r from-blue-500 to-blue-600 text-white shadow-sm">
            {statusLabels[project.status]}
          </span>
        </div>

        <!-- Informations du projet -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mt-8">
          <div class="text-center sm:text-left">
            <p class="text-sm font-medium text-gray-500 mb-2">Formule choisie</p>
            <p class="text-xl font-bold bg-gradient-to-r from-green-600 to-blue-600 bg-clip-text text-transparent">
              {packLabels[project.pack]}
            </p>
          </div>
          <div class="text-center sm:text-left">
            <p class="text-sm font-medium text-gray-500 mb-2">Montant total</p>
            <p class="text-xl font-bold text-gray-900">{project.totalAmount} ‚Ç¨</p>
          </div>
          <div class="text-center sm:text-left">
            <p class="text-sm font-medium text-gray-500 mb-2">Livraison estim√©e</p>
            <p class="text-xl font-bold text-gray-900">
              {formatDate(project.estimatedDelivery)}
            </p>
          </div>
        </div>

        <!-- Barre de progression -->
        <div class="mt-8 p-6 bg-gradient-to-br from-gray-50 to-blue-50/50 rounded-xl">
          <div class="flex justify-between items-center mb-3">
            <span class="font-semibold text-gray-900">Progression du projet</span>
            <span class="text-2xl font-bold bg-gradient-to-r from-green-600 to-blue-600 bg-clip-text text-transparent">
              {project.progress}%
            </span>
          </div>
          <div class="w-full bg-white rounded-full h-4 shadow-inner">
            <div
              class="bg-gradient-to-r from-green-500 via-blue-500 to-blue-600 h-4 rounded-full transition-all duration-500 shadow-md"
              style={`width: ${project.progress}%`}
            ></div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Colonne principale -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Mises √† jour -->
          {
            project.updates && project.updates.length > 0 && (
              <div class="card-minimal">
                <h2 class="heading-md mb-6 flex items-center gap-3">
                  <span class="text-3xl">üì¢</span>
                  Derni√®res actualit√©s
                </h2>
                <div class="space-y-4">
                  {project.updates
                    .slice()
                    .reverse()
                    .map((update) => (
                      <div class="border-l-4 border-gradient-to-b from-green-500 to-blue-500 bg-gradient-to-r from-green-50/50 to-blue-50/30 pl-6 pr-4 py-4 rounded-r-xl">
                        <p class="text-gray-800 leading-relaxed font-medium">{update.message}</p>
                        <p class="text-sm text-gray-500 mt-2 flex items-center gap-2">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                          {formatDate(update.createdAt)}
                        </p>
                      </div>
                    ))}
                </div>
              </div>
            )
          }

          <!-- Maquettes -->
          {
            project.mockups && project.mockups.length > 0 && (
              <div class="card-minimal">
                <h2 class="heading-md mb-6 flex items-center gap-3">
                  <span class="text-3xl">üé®</span>
                  Maquettes du projet
                </h2>
                <div class="space-y-6">
                  {project.mockups.map((mockup, index) => (
                    <div class="border-2 border-gray-100 hover:border-blue-200 rounded-xl p-6 transition-all duration-300 bg-white hover:shadow-lg">
                      <div class="flex justify-between items-start mb-4">
                        <h3 class="text-xl font-bold text-gray-900">
                          {mockup.title}
                        </h3>
                        <span
                          class={`text-sm font-semibold px-4 py-2 rounded-xl ${
                            mockup.status === 'approved'
                              ? 'bg-gradient-to-r from-green-500 to-green-600 text-white'
                              : mockup.status === 'revision'
                                ? 'bg-gradient-to-r from-orange-500 to-orange-600 text-white'
                                : 'bg-gradient-to-r from-blue-500 to-blue-600 text-white'
                          }`}
                        >
                          {mockupStatusLabels[mockup.status]}
                        </span>
                      </div>

                      {mockup.image && (
                        <img
                          src={imageBuilder.image(mockup.image).width(800).url()}
                          alt={mockup.title}
                          class="w-full rounded-xl mb-4 shadow-md hover:shadow-xl transition-shadow duration-300"
                          loading="lazy"
                          width="800"
                          height="600"
                        />
                      )}

                      {mockup.status === 'pending' && (
                        <div class="mt-6 p-6 bg-gradient-to-br from-gray-50 to-blue-50/30 rounded-xl">
                          <p class="font-semibold text-gray-900 mb-4 flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                            </svg>
                            Donnez votre avis sur cette maquette
                          </p>
                          <form
                            class="mockup-feedback-form space-y-4"
                            data-project-id={project._id}
                            data-mockup-index={index}
                          >
                            <textarea
                              name="feedback"
                              required
                              rows={4}
                              class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
                              placeholder="Partagez vos remarques, suggestions ou validez la maquette..."
                            />
                            <div class="flex flex-col sm:flex-row gap-3">
                              <button
                                type="submit"
                                data-status="approved"
                                class="flex-1 btn-green flex items-center justify-center gap-2"
                              >
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Valider cette maquette
                              </button>
                              <button
                                type="submit"
                                data-status="revision"
                                class="flex-1 bg-gradient-to-r from-orange-500 to-orange-600 text-white px-6 py-3 rounded-xl font-semibold hover:from-orange-600 hover:to-orange-700 transition-all shadow-md hover:shadow-lg flex items-center justify-center gap-2"
                              >
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                </svg>
                                Demander une r√©vision
                              </button>
                            </div>
                          </form>
                        </div>
                      )}

                      {mockup.feedback && (
                        <div class="mt-4 p-4 bg-blue-50 border-l-4 border-blue-500 rounded-r-xl">
                          <p class="text-sm font-semibold text-blue-900 mb-2 flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                            </svg>
                            Votre retour :
                          </p>
                          <p class="text-sm text-gray-800 leading-relaxed">{mockup.feedback}</p>
                        </div>
                      )}
                    </div>
                  ))}
                </div>
              </div>
            )
          }
        </div>

        <!-- Colonne lat√©rale -->
        <div class="space-y-8">
          <!-- Factures -->
          {
            project.invoices && project.invoices.length > 0 && (
              <div class="card-minimal">
                <h2 class="heading-sm mb-6 flex items-center gap-2">
                  <span class="text-2xl">üìÑ</span>
                  Factures
                </h2>
                <div class="space-y-4">
                  {project.invoices.map((invoice) => (
                    <div class="border-2 border-gray-100 hover:border-blue-200 rounded-xl p-5 transition-all duration-300 bg-white hover:shadow-md">
                      <div class="flex justify-between items-start mb-3">
                        <div>
                          <p class="font-bold text-gray-900 text-lg">
                            {invoice.invoiceNumber}
                          </p>
                          <p class="text-sm text-gray-500 font-medium">
                            {invoice.type === 'deposit'
                              ? 'Acompte'
                              : invoice.type === 'balance'
                                ? 'Solde'
                                : 'Paiement int√©gral'}
                          </p>
                        </div>
                        <span
                          class={`text-xs font-semibold px-3 py-1.5 rounded-lg ${
                            invoice.status === 'paid'
                              ? 'bg-green-100 text-green-700'
                              : invoice.status === 'overdue'
                                ? 'bg-red-100 text-red-700'
                                : 'bg-yellow-100 text-yellow-700'
                          }`}
                        >
                          {invoiceStatusLabels[invoice.status]}
                        </span>
                      </div>
                      <p class="text-2xl font-bold bg-gradient-to-r from-green-600 to-blue-600 bg-clip-text text-transparent mb-2">
                        {invoice.amount} ‚Ç¨
                      </p>
                      <p class="text-xs text-gray-500 mb-4 flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        √âmise le {formatDate(invoice.issuedAt)}
                      </p>
                      {invoice.pdfUrl && (
                        <a
                          href={invoice.pdfUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="inline-flex items-center gap-2 text-sm font-semibold text-blue-600 hover:text-blue-700 transition-colors"
                        >
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                            />
                          </svg>
                          T√©l√©charger le PDF
                        </a>
                      )}
                    </div>
                  ))}
                </div>
              </div>
            )
          }

          <!-- Paiement -->
          <div class="card-minimal bg-gradient-to-br from-white to-gray-50">
            <h2 class="heading-sm mb-6 flex items-center gap-2">
              <span class="text-2xl">üí≥</span>
              Paiement
            </h2>
            <div class="space-y-4">
              <div class="flex justify-between items-center pb-3 border-b border-gray-200">
                <span class="text-gray-600 font-medium">Montant total</span>
                <span class="font-bold text-lg text-gray-900">{project.totalAmount} ‚Ç¨</span>
              </div>
              <div class="flex justify-between items-center pb-3 border-b border-gray-200">
                <span class="text-gray-600 font-medium">D√©j√† pay√©</span>
                <span class="font-bold text-lg text-green-600">{project.paidAmount} ‚Ç¨</span>
              </div>
              <div class="pt-2 flex justify-between items-center">
                <span class="font-bold text-gray-900">Restant d√ª</span>
                <span class="text-2xl font-bold bg-gradient-to-r from-orange-600 to-red-600 bg-clip-text text-transparent">
                  {project.totalAmount - project.paidAmount} ‚Ç¨
                </span>
              </div>
            </div>
          </div>

          <!-- Contact -->
          <div class="card-minimal bg-gradient-to-br from-green-50 via-blue-50 to-purple-50">
            <h2 class="heading-sm mb-4 flex items-center gap-2">
              <span class="text-2xl">üí¨</span>
              Une question ?
            </h2>
            <p class="text-gray-700 mb-6 leading-relaxed">
              Notre √©quipe est disponible pour vous accompagner √† chaque √©tape de votre projet.
            </p>
            <a
              href="/#contact"
              class="btn-blue w-full text-center flex items-center justify-center gap-2"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Nous contacter
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Note: D√©connexion est g√©r√©e dans ClientHeader.astro

    // Feedback sur les maquettes
    const feedbackForms = document.querySelectorAll('.mockup-feedback-form')
    feedbackForms.forEach((form) => {
      form.addEventListener('submit', async (e: Event) => {
        e.preventDefault()
        const target = e.target as HTMLFormElement
        const submitter = (e as SubmitEvent).submitter as HTMLButtonElement

        const projectId = target.dataset.projectId
        const mockupIndex = parseInt(target.dataset.mockupIndex || '0')
        const feedback = (target.querySelector('[name="feedback"]') as HTMLTextAreaElement).value
        const status = submitter.dataset.status

        try {
          submitter.disabled = true
          submitter.textContent = 'Envoi...'

          const response = await fetch('/api/client/mockup-feedback', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ projectId, mockupIndex, feedback, status }),
          })

          if (response.ok) {
            alert('Votre feedback a √©t√© enregistr√© avec succ√®s !')
            location.reload()
          } else {
            alert('Erreur lors de l\'enregistrement du feedback')
            submitter.disabled = false
            submitter.textContent =
              status === 'approved' ? '‚úÖ Valider' : 'üîÑ Demander r√©vision'
          }
        } catch (error) {
          console.error('Feedback error:', error)
          alert('Erreur lors de l\'enregistrement du feedback')
          submitter.disabled = false
          submitter.textContent = status === 'approved' ? '‚úÖ Valider' : 'üîÑ Demander r√©vision'
        }
      })
    })
  </script>
</BaseLayout>
