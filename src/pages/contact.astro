---
import BaseLayout from '../layouts/BaseLayout.astro';
import Icon from '../components/Icon.astro';
---

<BaseLayout title="Contact - Loire Digital" description="Contactez Loire Digital pour votre projet de site web à Saint-Étienne. Devis gratuit et réponse sous 24h.">
  <!-- Hero Section -->
  <section class="relative py-24 md:py-32 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-5xl md:text-7xl font-black text-black mb-6" style="letter-spacing: -0.02em;">
          Contactez-nous
        </h1>
        <p class="text-xl text-gray-text">
          Discutons de votre projet. Réponse sous 24h garantie.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 section-pale">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">

        <!-- Contact Info -->
        <div>
          <h2 class="text-3xl font-black text-black mb-6" style="letter-spacing: -0.02em;">Parlons de votre projet</h2>
          <p class="text-gray-text mb-4 leading-relaxed">
            Que vous ayez déjà une idée précise ou que vous souhaitiez simplement explorer les possibilités,
            nous sommes là pour vous accompagner.
          </p>
          <p class="text-gray-text mb-8 text-sm italic border-l-4 border-blue-600 pl-4 py-2 bg-blue-50 rounded-r">
            Nous privilégions les échanges par écrit pour garantir une trace précise de vos demandes
            et une réactivité maximale.
          </p>

          <!-- Contact Methods -->
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-black mb-1">Email</h3>
                <a href="mailto:contact@loiredigital.fr" class="text-blue-600 hover:text-blue-700 font-medium">
                  contact@loiredigital.fr
                </a>
                <p class="text-sm text-gray-text mt-1">Réponse sous 24h</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-black mb-1">Localisation</h3>
                <p class="text-gray-text">Saint-Étienne, Loire</p>
                <p class="text-sm text-gray-text mt-1">Rencontres possibles sur place</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-black mb-1">Horaires</h3>
                <p class="text-gray-text">Lundi - Vendredi : 9h - 18h</p>
                <p class="text-sm text-gray-text mt-1">Flexibilité pour les rendez-vous</p>
              </div>
            </div>
          </div>

          <!-- Quick Links -->
          <div class="mt-12 card-minimal">
            <h3 class="font-bold text-black mb-4">Liens rapides</h3>
            <div class="space-y-3">
              <a href="/devis" class="flex items-center text-blue-600 hover:text-blue-700 font-medium group">
                <svg class="w-5 h-5 mr-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                Calculer un devis en ligne
              </a>
              <a href="/portfolio" class="flex items-center text-blue-600 hover:text-blue-700 font-medium group">
                <svg class="w-5 h-5 mr-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                Voir nos réalisations
              </a>
              <a href="/services" class="flex items-center text-blue-600 hover:text-blue-700 font-medium group">
                <svg class="w-5 h-5 mr-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                Découvrir nos services
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="card-minimal">
          <h3 class="text-2xl font-bold text-black mb-6">Envoyez-nous un message</h3>

          <form id="contact-form" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-semibold text-black mb-2">
                  Prénom *
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-4 py-3 bg-white border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all text-black"
                  placeholder="Jean"
                />
              </div>

              <div>
                <label for="lastName" class="block text-sm font-semibold text-black mb-2">
                  Nom *
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-4 py-3 bg-white border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all text-black"
                  placeholder="Dupont"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-black mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-white border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all text-black"
                placeholder="jean.dupont@exemple.fr"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-semibold text-black mb-2">
                Téléphone
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 bg-white border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all text-black"
                placeholder="06 12 34 56 78"
              />
            </div>

            <div>
              <label for="businessType" class="block text-sm font-semibold text-black mb-2">
                Type de commerce *
              </label>
              <select
                id="businessType"
                name="businessType"
                required
                class="w-full px-4 py-3 bg-white border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all text-black"
              >
                <option value="">Sélectionnez un type</option>
                <option value="restauration">Restauration</option>
                <option value="commerce-detail">Commerce de détail</option>
                <option value="beaute-bienetre">Beauté & Bien-être</option>
                <option value="artisanat">Artisanat</option>
                <option value="services-pro">Services professionnels</option>
                <option value="sante">Santé</option>
                <option value="autre">Autre</option>
              </select>
            </div>

            <div>
              <label for="budget" class="block text-sm font-semibold text-black mb-2">
                Budget estimé *
              </label>
              <select
                id="budget"
                name="budget"
                required
                class="w-full px-4 py-3 bg-white border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all text-black"
              >
                <option value="">Sélectionnez une fourchette</option>
                <option value="800-1500">800€ - 1 500€</option>
                <option value="1500-3000">1 500€ - 3 000€</option>
                <option value="3000-5000">3 000€ - 5 000€</option>
                <option value="5000+">Plus de 5 000€</option>
                <option value="non-defini">Non défini</option>
              </select>
            </div>

            <div>
              <label for="projectType" class="block text-sm font-semibold text-black mb-2">
                Type de projet *
              </label>
              <select
                id="projectType"
                name="projectType"
                required
                class="w-full px-4 py-3 bg-white border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all text-black"
              >
                <option value="">Sélectionnez un type</option>
                <option value="creation">Création de site</option>
                <option value="refonte">Refonte de site</option>
                <option value="maintenance">Maintenance</option>
                <option value="seo">SEO / Référencement</option>
                <option value="other">Autre</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-black mb-2">
                Décrivez votre projet *
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 bg-white border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all resize-none text-black"
                placeholder="Parlez-nous de votre projet, vos objectifs, vos besoins..."
              ></textarea>
            </div>

            <div>
              <label class="flex items-start space-x-3 cursor-pointer">
                <input
                  type="checkbox"
                  name="consent"
                  required
                  class="mt-1 w-5 h-5 text-blue-600 border-gray-200 rounded focus:ring-2 focus:ring-blue-600 bg-white"
                />
                <span class="text-sm text-gray-text">
                  J'accepte que mes données soient utilisées pour me recontacter au sujet de ma demande. *
                </span>
              </label>
            </div>

            <button
              type="submit"
              class="w-full btn-blue py-4 text-lg"
            >
              Envoyer le message
            </button>

            <p class="text-xs text-gray-text text-center">
              * Champs obligatoires - Réponse garantie sous 24h
            </p>
          </form>

          <!-- Success Message (hidden by default) -->
          <div id="success-message" class="hidden mt-6 p-6 bg-green-50 border-2 border-green-600 rounded-lg">
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h4 class="font-bold text-black mb-1">Message envoyé avec succès !</h4>
                <p class="text-sm text-gray-text">Merci pour votre message. Nous vous répondrons dans les plus brefs délais.</p>
              </div>
            </div>
          </div>

          <!-- Error Message (hidden by default) -->
          <div id="error-message" class="hidden mt-6 p-6 bg-red-50 border-2 border-red-600 rounded-lg">
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h4 class="font-bold text-black mb-1">Erreur d'envoi</h4>
                <p class="text-sm text-gray-text">Une erreur s'est produite. Veuillez réessayer ou nous contacter directement par email.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Contact Us Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-black text-black mb-4" style="letter-spacing: -0.02em;">Pourquoi nous contacter ?</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center card-minimal">
            <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="chat" class="text-blue-600" size={32} />
            </div>
            <h3 class="text-xl font-bold text-black mb-2">Conseil gratuit</h3>
            <p class="text-gray-text">
              Échangeons sur votre projet sans engagement. Nous vous guidons vers la meilleure solution.
            </p>
          </div>

          <div class="text-center card-minimal">
            <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="zap" class="text-blue-600" size={32} />
            </div>
            <h3 class="text-xl font-bold text-black mb-2">Réponse rapide</h3>
            <p class="text-gray-text">
              Nous nous engageons à vous répondre sous 24h, même le week-end.
            </p>
          </div>

          <div class="text-center card-minimal">
            <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="handshake" class="text-blue-600" size={32} />
            </div>
            <h3 class="text-xl font-bold text-black mb-2">Sans engagement</h3>
            <p class="text-gray-text">
              Demander un devis ou des informations ne vous engage en rien. C'est gratuit !
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Form handling (client-side validation and display)
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('contact-form') as HTMLFormElement;
      const successMessage = document.getElementById('success-message');
      const errorMessage = document.getElementById('error-message');

      form?.addEventListener('submit', async (e) => {
        e.preventDefault();

        // Hide previous messages
        successMessage?.classList.add('hidden');
        errorMessage?.classList.add('hidden');

        // Get form data
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        // Simulate form submission (in production, this would send to a backend)
        try {
          // Here you would typically send the data to your backend
          // For now, we'll just simulate success
          console.log('Form data:', data);

          // Show success message
          successMessage?.classList.remove('hidden');
          form.reset();

          // Scroll to success message
          successMessage?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });

        } catch (error) {
          console.error('Error submitting form:', error);
          errorMessage?.classList.remove('hidden');
          errorMessage?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
      });
    });
  </script>
</BaseLayout>
