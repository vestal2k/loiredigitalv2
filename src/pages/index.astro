  <!-- Contact Form Section -->
  <section id="contact" class="py-16 md:py-24 section-pale">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <h2
            class="text-4xl md:text-5xl font-black text-black mb-4"
            style="letter-spacing: -0.02em;"
          >
            Prêt à vous lancer ?
          </h2>
          <p class="text-lg text-gray-text max-w-2xl mx-auto">
            Demandez votre devis gratuit et détaillé. Réponse garantie sous 24 h.
          </p>
        </div>

        <div class="card-minimal p-8 md:p-12">
          <form action="/api/contact" method="POST" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
                  Nom complet <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                  placeholder="Jean Dupont"
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                  E-mail <span class="text-red-500">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                  placeholder="jean@exemple.fr"
                />
              </div>
            </div>

            <div>
              <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
                Téléphone
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                placeholder="06 12 34 56 78"
              />
            </div>

            <div>
              <label for="company" class="block text-sm font-semibold text-gray-700 mb-2">
                Nom de votre activité
              </label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                placeholder="Boulangerie Dupont, Salon Marie, etc."
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
                Votre projet <span class="text-red-500">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all resize-none"
                placeholder="Décrivez brièvement votre projet : type de site, nombre de pages souhaité, fonctionnalités particulières..."
              ></textarea>
            </div>

            <div class="flex items-start gap-3">
              <input
                type="checkbox"
                id="consent"
                name="consent"
                required
                class="w-5 h-5 mt-0.5 rounded border-gray-300 text-blue-600 focus:ring-blue-600"
              />
              <label for="consent" class="text-sm text-gray-600">
                J'accepte que mes données soient utilisées pour me recontacter dans le cadre de ma demande. <span class="text-red-500">*</span>
              </label>
            </div>

            <button
              type="submit"
              class="btn-blue w-full justify-center text-lg py-4 shadow-lg shadow-blue-600/30"
            >
              Envoyer ma demande
            </button>

            <p class="text-xs text-center text-gray-500">
              Réponse garantie sous 24 h • Sans engagement
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

