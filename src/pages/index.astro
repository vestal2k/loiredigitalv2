    // Chapter navigation active state
    document.addEventListener('DOMContentLoaded', () => {
      const sections = document.querySelectorAll('section[id]')
      const chapterLinks = document.querySelectorAll('.chapter-link')

      const observerOptions = {
        root: null,
        rootMargin: '-50% 0px -50% 0px',
        threshold: 0,
      }

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const id = entry.target.getAttribute('id')
            chapterLinks.forEach((link) => {
              link.classList.remove('text-blue-600', 'bg-blue-50', 'font-semibold')
              link.classList.add('text-gray-600')
            })
            const activeLink = document.querySelector(`.chapter-link[href="#${id}"]`)
            if (activeLink) {
              activeLink.classList.remove('text-gray-600')
              activeLink.classList.add('text-blue-600', 'bg-blue-50', 'font-semibold')
            }
          }
        })
      }, observerOptions)

      sections.forEach((section) => observer.observe(section))
    })
