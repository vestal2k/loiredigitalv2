  <!-- FAQ -->
  <FAQ items={faqItems} />

  <!-- FAQ Schema.org structured data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faqItems.map(item => ({
      "@type": "Question",
      "name": item.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": item.answer
      }
    }))
  })} />

  <!-- Contact Form Section -->
  <section id="contact" class="section-padding section-creme">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <span class="text-elegant-caps text-or tracking-widest mb-4 block">Contact</span>
          <h2 class="section-title">
            Discutons de votre projet
          </h2>
          <div class="separator-gold-center mt-6 mb-6"></div>
          <p class="section-subtitle mx-auto">
            Une question ? Un projet en tête ? Écrivez-nous, réponse garantie sous 24 h.
          </p>
        </div>

        <div class="card-elegant-highlight p-8 md:p-12 corner-decoration">
          <form action="/api/contact" method="POST" class="form-elegant">
            <!-- Honeypot anti-spam (invisible pour les humains) -->
            <div style="position: absolute; left: -9999px;" aria-hidden="true">
              <input type="text" name="_gotcha" tabindex="-1" autocomplete="off" />
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name">
                  Nom complet <span class="text-or">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  placeholder="Jean Dupont"
                />
              </div>

              <div>
                <label for="email">
                  E-mail <span class="text-or">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  placeholder="jean@exemple.fr"
                />
              </div>
            </div>

            <div>
              <label for="phone">
                Téléphone
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                placeholder="06 12 34 56 78"
              />
            </div>

            <div>
              <label for="company">
                Nom de votre activité
              </label>
              <input
                type="text"
                id="company"
                name="company"
                placeholder="Ex: Boulangerie, Salon de coiffure, Plombier..."
              />
            </div>

            <div>
              <label for="message">
                Votre projet <span class="text-or">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="resize-none"
                placeholder="Décrivez brièvement votre projet : type de site, nombre de pages souhaité, fonctionnalités particulières..."
              ></textarea>
            </div>

            <div class="flex items-start gap-3">
              <input
                type="checkbox"
                id="consent"
                name="consent"
                required
                class="checkbox-elegant mt-0.5"
              />
              <label for="consent" class="text-sm text-charbon !mb-0">
                J'accepte que mes données soient utilisées pour me recontacter dans le cadre de ma demande. <span class="text-or">*</span>
              </label>
            </div>

            <button
              type="submit"
              class="btn-gold w-full justify-center text-lg py-4 shadow-lg hover:shadow-or/40 hover:scale-[1.02] transition-all duration-300"
            >
              Obtenir mon devis gratuit
              <svg class="w-5 h-5 ml-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </button>

            <p class="text-xs text-center text-charbon">
              Réponse garantie sous 24 h • Sans engagement
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Final -->
  <CTA
    title="Prêt à vous lancer ?"
    description="Calculez votre budget en ligne ou écrivez-nous directement."
    primaryButton={{ text: 'Calculer mon budget', href: '/devis' }}
    secondaryButton={{ text: 'Discuter du projet', href: '#contact' }}
  />
