    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col bg-creme">
    <!-- Skip to content link for keyboard accessibility -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:bg-or focus:text-white focus:px-4 focus:py-2 focus:rounded-elegant focus:font-semibold"
    >
      Aller au contenu principal
    </a>

    <!-- Scroll Progress Indicator -->
    <div id="scroll-progress" class="fixed top-0 left-0 h-1 bg-or z-[60] transition-all duration-100" style="width: 0%"></div>

    <header
      class="sticky top-0 z-50 bg-white/98 backdrop-blur-md border-b border-gris-doux"
      role="banner"
    >
      <nav class="container mx-auto px-6 py-5" aria-label="Navigation principale">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center space-x-3 group">
            <img
              src="/logo.png"
              alt="Logo Loire Digital - Retour à l'accueil"
              class="w-10 h-10 group-hover:scale-105 transition-transform duration-300"
              width="40"
              height="40"
              fetchpriority="high"
            />
            <span class="text-xl font-serif font-semibold text-noir tracking-tight">Loire Digital</span>
          </a>

          <ul class="hidden md:flex items-center space-x-2">
            <li><a href="/#avantages" class="nav-link">Avantages</a></li>
            <li><a href="/#process" class="nav-link">Process</a></li>
            <li><a href="/#realisations" class="nav-link">Réalisations</a></li>
            <li><a href="/#tarifs" class="nav-link">Tarifs</a></li>
            <li><a href="/blog" class="nav-link">Blog</a></li>
            <li><a href="/#contact" class="btn-gold ml-6">Contact</a></li>
          </ul>

          <!-- Mobile menu button -->
          <button
            id="mobile-menu-button"
            class="md:hidden p-2 text-charbon hover:bg-creme-dark rounded-elegant transition-colors focus:outline-none focus:ring-2 focus:ring-or"
            aria-label="Ouvrir le menu de navigation"
            aria-expanded="false"
            aria-controls="mobile-menu"
          >
            <svg
              id="menu-icon-open"
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <svg
              id="menu-icon-close"
              class="w-6 h-6 hidden"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile menu (full-screen overlay) -->
        <div
          id="mobile-menu"
          class="hidden md:hidden fixed inset-0 bg-white z-40 flex flex-col"
          style="top: 81px;"
        >
          <nav class="flex-1 overflow-y-auto px-6 py-8">
            <ul class="flex flex-col space-y-2">
              <li>
                <a
                  href="/#avantages"
                  class="mobile-menu-link block px-6 py-4 text-lg text-charbon hover:text-noir hover:bg-creme-dark rounded-elegant transition-all font-medium"
                  >Avantages</a
                >
              </li>
              <li>
                <a
                  href="/#process"
                  class="mobile-menu-link block px-6 py-4 text-lg text-charbon hover:text-noir hover:bg-creme-dark rounded-elegant transition-all font-medium"
                  >Process</a
                >
              </li>
              <li>
                <a
                  href="/#realisations"
                  class="mobile-menu-link block px-6 py-4 text-lg text-charbon hover:text-noir hover:bg-creme-dark rounded-elegant transition-all font-medium"
                  >Réalisations</a
                >
              </li>
              <li>
                <a
                  href="/#tarifs"
                  class="mobile-menu-link block px-6 py-4 text-lg text-charbon hover:text-noir hover:bg-creme-dark rounded-elegant transition-all font-medium"
                  >Tarifs</a
                >
              </li>
              <li>
                <a
                  href="/blog"
                  class="mobile-menu-link block px-6 py-4 text-lg text-charbon hover:text-noir hover:bg-creme-dark rounded-elegant transition-all font-medium"
                  >Blog</a
                >
              </li>
              <li class="pt-6">
                <a
