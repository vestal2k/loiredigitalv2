      }
    </script>

    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col bg-creme">
    <!-- Skip to content link for keyboard accessibility -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:bg-or focus:text-white focus:px-4 focus:py-2 focus:rounded-elegant focus:font-semibold"
    >
      Aller au contenu principal
    </a>

    <!-- Scroll Progress Indicator -->
    <div id="scroll-progress" class="fixed top-0 left-0 h-1 bg-or z-[60] transition-all duration-100" style="width: 0%"></div>

    <header
      id="main-header"
      class="sticky top-0 z-50 bg-white/98 backdrop-blur-md border-b border-gris-doux"
      role="banner"
    >
      <nav class="container mx-auto px-6 py-5" aria-label="Navigation principale">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center space-x-3 group">
            <img
              src="/logo.png"
              alt="Logo Loire Digital - Retour à l'accueil"
              class="w-10 h-10 group-hover:scale-105 transition-transform duration-300"
              width="40"
              height="40"
              fetchpriority="high"
            />
            <span class="text-xl font-serif font-semibold text-noir tracking-tight">Loire Digital</span>
          </a>

          <ul class="hidden md:flex items-center space-x-2">
            <li><a href="/#avantages" class="nav-link">Pourquoi nous</a></li>
            <li><a href="/#process" class="nav-link">Comment ça marche</a></li>
            <li><a href="/#tarifs" class="nav-link">Nos prix</a></li>
            <li><a href="/a-propos" class="nav-link-page">À propos</a></li>
            <li><a href="/blog" class="nav-link-page">Blog</a></li>
            <li><a href="/#contact" class="btn-gold ml-6">Contact</a></li>
          </ul>

          <!-- Mobile menu button - Burger animé -->
          <button
            type="button"
            id="burger-btn"
            class="burger-btn md:hidden"
            aria-label="Ouvrir le menu"
            aria-expanded="false"
            aria-controls="mobile-nav"
          >
            <span class="burger-line"></span>
            <span class="burger-line"></span>
            <span class="burger-line"></span>
          </button>
        </div>
      </nav>
    </header>

    <!-- Mobile Navigation Dropdown -->
    <nav
      id="mobile-nav"
      class="mobile-nav-dropdown"
      aria-label="Menu mobile"
      aria-hidden="true"
    >
      <ul class="mobile-nav-dropdown-list">
        <li>
          <a href="/#avantages" class="mobile-nav-dropdown-link" data-mobile-link>Pourquoi nous</a>
        </li>
        <li>
          <a href="/#process" class="mobile-nav-dropdown-link" data-mobile-link>Comment ça marche</a>
        </li>
        <li>
          <a href="/#tarifs" class="mobile-nav-dropdown-link" data-mobile-link>Nos prix</a>
        </li>
        <li>
          <a href="/a-propos" class="mobile-nav-dropdown-link" data-mobile-link>À propos</a>
        </li>
        <li>
          <a href="/blog" class="mobile-nav-dropdown-link" data-mobile-link>Blog</a>
        </li>
        <li class="pt-4">
          <a href="/#contact" class="btn-gold w-full text-center" data-mobile-link>Contact</a>
        </li>
      </ul>
    </nav>

    <main id="main-content" class="flex-grow" role="main">
      <slot />
    </main>

    <footer class="bg-noir text-white py-20" role="contentinfo" aria-label="Pied de page">
      <div class="container mx-auto px-6">
        <!-- Séparateur doré -->
        <div class="separator-gold-center mb-16"></div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-12 lg:gap-16">
          <div>
            <div class="flex items-center space-x-3 mb-6">
              <img src="/logo.png" alt="Logo Loire Digital - Studio digital à Saint-Étienne" class="w-10 h-10" loading="lazy" width="40" height="40" />
              <span class="text-xl font-serif font-semibold text-white">Loire Digital</span>
            </div>
            <p class="text-gris-moyen text-sm leading-relaxed">Studio digital basé à Saint-Étienne. Nous créons des sites web élégants pour les commerces locaux.</p>
          </div>

          <div>
            <p class="text-elegant-caps text-or mb-6">Navigation</p>
            <ul class="space-y-3 text-sm">
              <li>
                <a href="/#avantages" class="text-gris-moyen hover:text-or transition-colors duration-300">Pourquoi nous</a>
              </li>
              <li>
                <a href="/#process" class="text-gris-moyen hover:text-or transition-colors duration-300">Comment ça marche</a>
              </li>
              <li>
                <a href="/#tarifs" class="text-gris-moyen hover:text-or transition-colors duration-300">Nos prix</a>
              </li>
              <li>
                <a href="/a-propos" class="text-gris-moyen hover:text-or transition-colors duration-300">À propos</a>
              </li>
              <li><a href="/blog" class="text-gris-moyen hover:text-or transition-colors duration-300">Blog</a></li>
            </ul>
          </div>

          <div>
            <p class="text-elegant-caps text-or mb-6">Liens utiles</p>
            <ul class="space-y-3 text-sm">
              <li>
                <a href="/devis" class="text-gris-moyen hover:text-or transition-colors duration-300">Demander un devis</a>
              </li>
              <li>
                <a href="/#contact" class="text-gris-moyen hover:text-or transition-colors duration-300">Contact</a>
              </li>
            </ul>
          </div>

          <div>
            <p class="text-elegant-caps text-or mb-6">Contact</p>
            <ul class="space-y-4 text-sm">
              <li class="flex items-center space-x-3">
                <svg
                  class="w-5 h-5 text-or flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span class="text-gris-moyen">Saint-Étienne, Loire</span>
              </li>
              <li class="flex items-center space-x-3">
                <svg
                  class="w-5 h-5 text-or flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
                <a
                  href="mailto:contact@loiredigital.fr"
                  class="text-gris-moyen hover:text-or transition-colors duration-300"
                  aria-label="Envoyer un email à contact@loiredigital.fr">contact@loiredigital.fr</a
                >
              </li>
            </ul>
          </div>
        </div>

        <div class="border-t border-noir-light mt-16 pt-8">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            <div class="flex flex-wrap justify-center md:justify-start gap-6 text-sm">
              <a href="/mentions-legales" class="text-gris-moyen hover:text-or transition-colors duration-300">Mentions légales</a>
              <a href="/cgv" class="text-gris-moyen hover:text-or transition-colors duration-300">CGV</a>
              <a href="/politique-confidentialite" class="text-gris-moyen hover:text-or transition-colors duration-300">Politique de confidentialité</a>
            </div>
            <div class="text-center md:text-right">
              <p class="text-sm text-gris-moyen">&copy; {currentYear} Loire Digital. Tous droits réservés.</p>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <script is:inline>
      (function() {
        var burgerBtn = document.getElementById('burger-btn');
        var mobileNav = document.getElementById('mobile-nav');
        var mobileLinks = document.querySelectorAll('[data-mobile-link]');
        var isMenuOpen = false;

        function openMenu() {
          isMenuOpen = true;
          burgerBtn.classList.add('is-active');
          burgerBtn.setAttribute('aria-expanded', 'true');
          burgerBtn.setAttribute('aria-label', 'Fermer le menu');
          mobileNav.classList.add('is-open');
          mobileNav.setAttribute('aria-hidden', 'false');
        }

        function closeMenu() {
          isMenuOpen = false;
          burgerBtn.classList.remove('is-active');
          burgerBtn.setAttribute('aria-expanded', 'false');
          burgerBtn.setAttribute('aria-label', 'Ouvrir le menu');
          mobileNav.classList.remove('is-open');
          mobileNav.setAttribute('aria-hidden', 'true');
        }

        function toggleMenu() {
          if (isMenuOpen) {
            closeMenu();
          } else {
            openMenu();
          }
        }

        if (burgerBtn) {
          burgerBtn.addEventListener('click', toggleMenu);
        }

        mobileLinks.forEach(function(link) {
          link.addEventListener('click', closeMenu);
        });

        document.addEventListener('keydown', function(e) {
          if (e.key === 'Escape' && isMenuOpen) {
            closeMenu();
          }
        });

        window.addEventListener('resize', function() {
          if (window.innerWidth >= 768 && isMenuOpen) {
            closeMenu();
          }
        });

        // Scroll Progress
        var scrollProgress = document.getElementById('scroll-progress');
        window.addEventListener('scroll', function() {
          var scrollTop = window.scrollY;
          var docHeight = document.documentElement.scrollHeight - window.innerHeight;
          var progress = (scrollTop / docHeight) * 100;
          if (scrollProgress) {
            scrollProgress.style.width = progress + '%';
          }
        });

        // Scroll Animations
        if ('IntersectionObserver' in window) {
          var observer = new IntersectionObserver(function(entries) {
            entries.forEach(function(entry) {
              if (entry.isIntersecting) {
                entry.target.classList.add('animate-visible');
                observer.unobserve(entry.target);
              }
            });
          }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

          document.querySelectorAll('section').forEach(function(section) {
            section.classList.add('animate-on-scroll');
            observer.observe(section);
          });
        }
      })();
    </script>

    <!-- Cookie Banner RGPD -->
    <div id="cookie-banner" class="fixed bottom-0 left-0 right-0 bg-noir text-white p-4 z-[60] transform translate-y-full transition-transform duration-300" style="display: none;">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          <p class="text-sm text-center md:text-left">
            Ce site utilise des cookies pour améliorer votre expérience et analyser le trafic.
            <a href="/politique-confidentialite" class="text-or hover:text-or-light underline">En savoir plus</a>
          </p>
          <div class="flex gap-3">
            <button id="cookie-reject" class="px-4 py-2 text-sm border border-white/30 rounded-elegant hover:bg-white/10 transition-colors">
              Refuser
            </button>
            <button id="cookie-accept" class="px-4 py-2 text-sm bg-or text-white rounded-elegant hover:bg-or-light transition-colors">
              Accepter
            </button>
          </div>
        </div>
      </div>
    </div>

    <script is:inline>
      (function() {
        var banner = document.getElementById('cookie-banner');
        var acceptBtn = document.getElementById('cookie-accept');
        var rejectBtn = document.getElementById('cookie-reject');

        if (!localStorage.getItem('cookies-consent')) {
          banner.style.display = 'block';
          setTimeout(function() {
            banner.style.transform = 'translateY(0)';
          }, 500);
        }

        acceptBtn?.addEventListener('click', function() {
          localStorage.setItem('cookies-consent', 'accepted');
          banner.style.transform = 'translateY(100%)';
          setTimeout(function() { banner.style.display = 'none'; }, 300);
        });

        rejectBtn?.addEventListener('click', function() {
          localStorage.setItem('cookies-consent', 'rejected');
          banner.style.transform = 'translateY(100%)';
          setTimeout(function() { banner.style.display = 'none'; }, 300);
        });
      })();
    </script>

    <!-- Vercel Speed Insights (Core Web Vitals) -->
    <SpeedInsights />
  </body>
</html>
