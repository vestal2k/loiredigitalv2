---
import '../styles/global.css'
import Analytics from '@vercel/analytics/astro'
import SpeedInsights from '@vercel/speed-insights/astro'

interface Props {
  title?: string
  description?: string
  ogImage?: string
}

const {
  title = 'Loire Digital - Création de sites web à Saint-Étienne',
  description = 'Création de sites web professionnels pour les commerces locaux de Saint-Étienne et sa région. Design moderne, SEO optimisé et prix transparents.',
  ogImage = '/og-image.jpg',
} = Astro.props

const canonicalURL = new URL(Astro.url.pathname, Astro.site)
const currentYear = new Date().getFullYear()

const jsonLdSchema = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  '@id': 'https://loiredigital.fr',
  name: 'Loire Digital',
  description: 'Agence de création de sites web professionnels pour commerces locaux',
  url: 'https://loiredigital.fr',
  telephone: '',
  email: 'contact@loiredigital.fr',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Saint-Étienne',
    addressRegion: 'Loire',
    addressCountry: 'FR',
  },
  geo: {
    '@type': 'GeoCoordinates',
    latitude: 45.4397,
    longitude: 4.3872,
  },
  areaServed: {
    '@type': 'GeoCircle',
    geoMidpoint: {
      '@type': 'GeoCoordinates',
      latitude: 45.4397,
      longitude: 4.3872,
    },
    geoRadius: '50000',
  },
  priceRange: '€€',
  openingHoursSpecification: [
    {
      '@type': 'OpeningHoursSpecification',
      dayOfWeek: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
      opens: '09:00',
      closes: '18:00',
    },
  ],
  sameAs: [],
}
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Preconnect to Google Fonts for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Playfair+Display:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <!-- SEO Meta Tags -->
    <meta
      name="keywords"
      content="création site web, Saint-Étienne, Loire, site internet, web design, commerce local, freelance"
    />
    <meta name="author" content="Loire Digital" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:locale" content="fr_FR" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.site)} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLdSchema)} />

    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col bg-creme">
    <header
      class="sticky top-0 z-50 bg-white/98 backdrop-blur-md border-b border-gris-doux"
    >
      <nav class="container mx-auto px-6 py-5">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center space-x-3 group">
            <img
              src="/logo.svg"
              alt="Logo Loire Digital - Retour à l'accueil"
              class="w-10 h-10 group-hover:scale-105 transition-transform duration-300"
              width="40"
              height="40"
            />
            <span class="text-xl font-serif font-semibold text-noir tracking-tight">Loire Digital</span>
          </a>

          <ul class="hidden md:flex items-center space-x-2">
            <li><a href="/#avantages" class="nav-link">Avantages</a></li>
            <li><a href="/#process" class="nav-link">Process</a></li>
            <li><a href="/#realisations" class="nav-link">Réalisations</a></li>
            <li><a href="/#tarifs" class="nav-link">Tarifs</a></li>
            <li><a href="/blog" class="nav-link">Blog</a></li>
            <li><a href="/#contact" class="btn-gold ml-6">Contact</a></li>
          </ul>

          <!-- Mobile menu button -->
          <button
            id="mobile-menu-button"
            class="md:hidden p-2 text-charbon hover:bg-creme-dark rounded-elegant transition-colors focus:outline-none focus:ring-2 focus:ring-or"
            aria-label="Ouvrir le menu de navigation"
            aria-expanded="false"
            aria-controls="mobile-menu"
          >
            <svg
              id="menu-icon-open"
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <svg
              id="menu-icon-close"
              class="w-6 h-6 hidden"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile menu (full-screen overlay) -->
        <div
          id="mobile-menu"
          class="hidden md:hidden fixed inset-0 bg-white z-40 flex flex-col"
          style="top: 81px;"
        >
          <nav class="flex-1 overflow-y-auto px-6 py-8">
            <ul class="flex flex-col space-y-2">
              <li>
                <a
                  href="/#avantages"
                  class="mobile-menu-link block px-6 py-4 text-lg text-charbon hover:text-noir hover:bg-creme-dark rounded-elegant transition-all font-medium"
                  >Avantages</a
                >
              </li>
              <li>
                <a
                  href="/#process"
                  class="mobile-menu-link block px-6 py-4 text-lg text-charbon hover:text-noir hover:bg-creme-dark rounded-elegant transition-all font-medium"
                  >Process</a
                >
              </li>
              <li>
                <a
                  href="/#realisations"
                  class="mobile-menu-link block px-6 py-4 text-lg text-charbon hover:text-noir hover:bg-creme-dark rounded-elegant transition-all font-medium"
                  >Réalisations</a
                >
              </li>
              <li>
                <a
                  href="/#tarifs"
                  class="mobile-menu-link block px-6 py-4 text-lg text-charbon hover:text-noir hover:bg-creme-dark rounded-elegant transition-all font-medium"
                  >Tarifs</a
                >
              </li>
              <li>
                <a
                  href="/blog"
                  class="mobile-menu-link block px-6 py-4 text-lg text-charbon hover:text-noir hover:bg-creme-dark rounded-elegant transition-all font-medium"
                  >Blog</a
                >
              </li>
              <li class="pt-6">
                <a
                  href="/#contact"
                  class="mobile-menu-link btn-gold block text-center"
                  >Contact</a
                >
              </li>
            </ul>
          </nav>
        </div>
      </nav>
    </header>

    <main class="flex-grow">
      <slot />
    </main>

    <footer class="bg-noir text-white py-20">
      <div class="container mx-auto px-6">
        <!-- Séparateur doré -->
        <div class="separator-gold-center mb-16"></div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-12 lg:gap-16">
          <div>
            <div class="flex items-center space-x-3 mb-6">
              <img src="/logo.svg" alt="Logo Loire Digital - Studio digital à Saint-Étienne" class="w-10 h-10" loading="lazy" width="40" height="40" />
              <span class="text-xl font-serif font-semibold text-white">Loire Digital</span>
            </div>
            <p class="text-gris-moyen text-sm leading-relaxed">Studio digital premium basé à Saint-Étienne. Nous créons des sites web élégants pour les commerces locaux.</p>
          </div>

          <div>
            <p class="text-elegant-caps text-or mb-6">Navigation</p>
            <ul class="space-y-3 text-sm">
              <li>
                <a href="/#avantages" class="text-gris-moyen hover:text-or transition-colors duration-300">Avantages</a>
              </li>
              <li>
                <a href="/#process" class="text-gris-moyen hover:text-or transition-colors duration-300">Process</a>
              </li>
              <li>
                <a href="/#realisations" class="text-gris-moyen hover:text-or transition-colors duration-300">Réalisations</a>
              </li>
              <li>
                <a href="/#tarifs" class="text-gris-moyen hover:text-or transition-colors duration-300">Tarifs</a>
              </li>
              <li><a href="/blog" class="text-gris-moyen hover:text-or transition-colors duration-300">Blog</a></li>
            </ul>
          </div>

          <div>
            <p class="text-elegant-caps text-or mb-6">Liens utiles</p>
            <ul class="space-y-3 text-sm">
              <li>
                <a href="/devis" class="text-gris-moyen hover:text-or transition-colors duration-300">Demander un devis</a>
              </li>
              <li>
                <a href="/#contact" class="text-gris-moyen hover:text-or transition-colors duration-300">Contact</a>
              </li>
              <li>
                <a href="/espace-client" class="text-gris-moyen hover:text-or transition-colors duration-300">Espace client</a>
              </li>
              <li>
                <a href="/paiement" class="text-gris-moyen hover:text-or transition-colors duration-300">Paiement en ligne</a>
              </li>
            </ul>
          </div>

          <div>
            <p class="text-elegant-caps text-or mb-6">Contact</p>
            <ul class="space-y-4 text-sm">
              <li class="flex items-center space-x-3">
                <svg
                  class="w-5 h-5 text-or"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span class="text-gris-moyen">Saint-Étienne, Loire</span>
              </li>
              <li class="flex items-center space-x-3">
                <svg
                  class="w-5 h-5 text-or"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
                <a
                  href="mailto:contact@loiredigital.fr"
                  class="text-gris-moyen hover:text-or transition-colors duration-300">contact@loiredigital.fr</a
                >
              </li>
            </ul>
          </div>
        </div>

        <div class="border-t border-noir-light mt-16 pt-8">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            <div class="flex flex-wrap justify-center md:justify-start gap-6 text-sm">
              <a href="/mentions-legales" class="text-gris-moyen hover:text-or transition-colors duration-300">Mentions légales</a>
              <a href="/cgv" class="text-gris-moyen hover:text-or transition-colors duration-300">CGV</a>
              <a href="/politique-confidentialite" class="text-gris-moyen hover:text-or transition-colors duration-300">Politique de confidentialité</a>
            </div>
            <div class="text-center md:text-right">
              <p class="text-sm text-gris-moyen">&copy; {currentYear} Loire Digital. Tous droits réservés.</p>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle with body scroll lock
      // Note: This implementation is compatible with Crisp widget
      // - Header uses z-50, Crisp uses much higher z-index
      // - Body scroll lock doesn't affect fixed positioned elements like Crisp
      // - Menu opens in header (top), Crisp is positioned bottom-right
      const mobileMenuButton = document.getElementById('mobile-menu-button')
      const mobileMenu = document.getElementById('mobile-menu')
      const mobileMenuLinks = document.querySelectorAll('.mobile-menu-link')
      const menuIconOpen = document.getElementById('menu-icon-open')
      const menuIconClose = document.getElementById('menu-icon-close')

      function toggleMobileMenu() {
        const isHidden = mobileMenu?.classList.contains('hidden')

        if (isHidden) {
          // Open menu
          mobileMenu?.classList.remove('hidden')
          mobileMenuButton?.setAttribute('aria-expanded', 'true')
          mobileMenuButton?.setAttribute('aria-label', 'Fermer le menu de navigation')
          document.body.style.overflow = 'hidden'
          menuIconOpen?.classList.add('hidden')
          menuIconClose?.classList.remove('hidden')
        } else {
          // Close menu
          mobileMenu?.classList.add('hidden')
          mobileMenuButton?.setAttribute('aria-expanded', 'false')
          mobileMenuButton?.setAttribute('aria-label', 'Ouvrir le menu de navigation')
          document.body.style.overflow = ''
          menuIconOpen?.classList.remove('hidden')
          menuIconClose?.classList.add('hidden')
        }
      }

      function closeMobileMenu() {
        mobileMenu?.classList.add('hidden')
        mobileMenuButton?.setAttribute('aria-expanded', 'false')
        mobileMenuButton?.setAttribute('aria-label', 'Ouvrir le menu de navigation')
        document.body.style.overflow = ''
        menuIconOpen?.classList.remove('hidden')
        menuIconClose?.classList.add('hidden')
      }

      // Toggle menu on button click
      mobileMenuButton?.addEventListener('click', toggleMobileMenu)

      // Close menu when clicking on a link
      mobileMenuLinks.forEach((link) => {
        link.addEventListener('click', () => {
          closeMobileMenu()
        })
      })

      // Close menu on Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !mobileMenu?.classList.contains('hidden')) {
          closeMobileMenu()
        }
      })

      // Close menu on window resize to desktop size
      window.addEventListener('resize', () => {
        if (window.innerWidth >= 768 && !mobileMenu?.classList.contains('hidden')) {
          closeMobileMenu()
        }
      })

      // Set active navigation link
      const currentPath = window.location.pathname
      const navLinks = document.querySelectorAll('.nav-link')

      navLinks.forEach((link) => {
        const href = link.getAttribute('href')
        if (
          href && (
            href === currentPath ||
            (currentPath === '/' && href === '/') ||
            (currentPath.startsWith(href) && href !== '/')
          )
        ) {
          link.classList.add('active')
        }
      })
    </script>

    <script type="text/javascript">
      window.$crisp = []
      window.CRISP_WEBSITE_ID = '3a1e95c6-4706-45d0-b186-b6e1fbc0c6aa'

      // Configure Crisp before loading
      window.$crisp.push(['safe', true]) // Enable safe mode for GDPR compliance

      // Load Crisp widget
      ;(function () {
        var d = document
        var s = d.createElement('script')
        s.src = 'https://client.crisp.chat/l.js'
        s.async = 1
        d.getElementsByTagName('head')[0].appendChild(s)
      })()

      // Configure Crisp after it loads
      window.$crisp.push(['on', 'chat:opened', function() {
        // Send welcome message when chat is opened
        window.$crisp.push(['do', 'message:show', ['text', 'Bonjour ! Besoin d\'aide pour choisir votre formule ? Nous vous répondons sous 24 h.']])
      }])

      // Auto-show message after user has been on site for 60 seconds (less aggressive)
      setTimeout(function() {
        if (!sessionStorage.getItem('crisp_welcome_shown')) {
          window.$crisp.push(['do', 'message:show', ['text', 'Une question sur nos services ou tarifs ? N\'hésitez pas à nous contacter, nous vous répondons sous 24 h.']])
          sessionStorage.setItem('crisp_welcome_shown', 'true')
        }
      }, 60000)

      // Set company info
      window.$crisp.push(['set', 'session:data', [[
        ['site_url', window.location.href],
        ['langue', 'fr']
      ]]])
    </script>

    <!-- Vercel Analytics and Speed Insights -->
    <Analytics />
    <SpeedInsights />
  </body>
</html>
